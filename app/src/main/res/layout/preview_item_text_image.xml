<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/preview_cell_padding">

    <TextView
        android:id="@+id/preview_item_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/preview_cell_text_size_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_image_preview_cell_height"
        android:layout_marginTop="@dimen/preview_cell_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/preview_item_image_icon"
            android:layout_width="@dimen/preview_cell_image_width"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/preview_cell_padding">

            <TextView
                android:id="@+id/preview_item_text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="5"
                android:textSize="@dimen/preview_cell_text_size_description" />

            <TextView
                android:id="@+id/preview_item_text_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/preview_cell_padding"
                android:singleLine="true"
                android:textSize="@dimen/preview_cell_text_size_timestamp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
