<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_image_preview_cell_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/preview_cell_padding">

    <ImageView
        android:id="@+id/preview_item_image_icon"
        android:layout_width="@dimen/preview_cell_image_width"
        android:layout_height="@dimen/text_image_preview_cell_height"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/preview_cell_padding"
        android:layout_marginRight="@dimen/preview_cell_padding"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preview_item_text_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/preview_cell_text_size_timestamp" />

        <TextView
            android:id="@+id/preview_item_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/preview_cell_text_size_title" />

        <TextView
            android:id="@+id/preview_item_text_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="@dimen/preview_cell_text_size_description" />

    </LinearLayout>

</LinearLayout>